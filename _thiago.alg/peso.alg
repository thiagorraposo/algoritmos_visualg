algoritmo "peso"
// Função :
// Autor :
// Data : 15/08/2022
// Seção de Declarações 
var
   peso, qtdAgua: real
inicio
      escreva("digite seu peso: Kg ")
      leia(peso)
      qtdAgua <- peso * 0.040
      escreva("voce deve ingerir pelo menos ", qtdAgua, " litros de agua por dia")
      
fimalgoritmo
